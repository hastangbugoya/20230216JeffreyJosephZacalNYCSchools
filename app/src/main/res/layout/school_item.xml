<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:elevation="4dp"
    android:layout_margin="4dp"
    android:padding="2dp"
    app:cardBackgroundColor="@color/white">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/school_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
         >
        <TextView
            android:id="@+id/school_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            tools:text="School Name"
            android:contentDescription="School name"
            android:textSize="24sp"
            android:fontFamily="@font/gothamic"
            android:textColor="@color/mycolor2"
            android:layout_marginBottom="2dp"
            android:background="@color/mycolor1"
            android:padding="4dp"/>
        <ImageView
            android:id="@+id/directions_icon"
            android:src="@drawable/baseline_directions_24"
            android:clickable="true"
            android:focusable="true"
            android:padding="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/school_address"
            app:layout_constraintBottom_toBottomOf="@id/school_address"
            android:contentDescription="click button to get directions"/>
        <TextView
            android:id="@+id/school_address"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/school_name"
            app:layout_constraintLeft_toRightOf="@id/directions_icon"
            app:layout_constraintRight_toRightOf="parent"
            tools:text="School Address"
            android:textSize="18sp"
            android:textColor="@color/mycolor2"
            android:layout_marginBottom="2dp"
            android:contentDescription="School address"
            android:padding="4dp"/>
        <ImageView
            android:id="@+id/email_icon"
            app:layout_constraintLeft_toLeftOf="parent"
            android:src="@drawable/baseline_mail_outline_24"
            app:layout_constraintTop_toTopOf="@id/school_email"
            app:layout_constraintBottom_toBottomOf="@id/school_email"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:contentDescription="click to send an email to school"
            />
        <TextView
            android:id="@+id/school_email"
            android:focusable="true"
            android:clickable="true"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/school_address"
            app:layout_constraintLeft_toRightOf="@id/email_icon"
            app:layout_constraintRight_toRightOf="parent"
            android:textSize="18sp"
            android:textColor="@color/mycolor2"
            tools:text="eMail Address"
            android:contentDescription="School email address"
            android:padding="4dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>